{
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "previewFeatures": true,
  "mcpServers": {
    "metacog": {
      "command": "tsx",
      "args": [
        "../gemini-agent/mcp/server.ts"
      ],
      "trust": true
    },
    "railway": {
      "command": "npx",
      "args": [
        "-y",
        "railway-mcp@2.2.0"
      ],
      "trust": true,
      "includeTools": [],
      "env": {
        "RAILWAY_API_TOKEN": "${RAILWAY_API_TOKEN}"
      }
    },
    "fireflies": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://api.fireflies.ai/mcp",
        "--header",
        "Authorization: Bearer ${FIREFLIES_API_KEY}"
      ],
      "trust": true,
      "includeTools": []
    }
  }
}
