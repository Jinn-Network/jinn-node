# jinn-node Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Required: OLAS Operate Service Configuration
# =============================================================================
# These values are auto-configured from your OLAS service deployment
# MECH_ADDRESS=0x...
# MECH_SAFE_ADDRESS=0x...
# MECH_PRIVATE_KEY=0x...

# Password for OLAS Operate middleware (minimum 8 characters)
# OPERATE_PASSWORD=your_secure_password

# =============================================================================
# Required: Blockchain RPC
# =============================================================================
RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
CHAIN_ID=8453

# =============================================================================
# Required: Ponder Indexer
# =============================================================================
PONDER_GRAPHQL_URL=https://jinn-gemini-production.up.railway.app/graphql

# =============================================================================
# Optional: Control API (for off-chain data)
# =============================================================================
CONTROL_API_URL=https://control-api-production-c1f5.up.railway.app/graphql

# Optional: x402 gateway base URL (templates + marketplace)
# X402_GATEWAY_URL=https://x402-gateway-production-1b84.up.railway.app

# =============================================================================
# Optional: Gemini/AI Configuration
# =============================================================================
# GEMINI_API_KEY=your_gemini_api_key
# GEMINI_OAUTH_CREDENTIALS=[{"oauth_creds":{...},"google_accounts":{"active":"you@example.com"}}]
# MECH_MODEL=gemini-2.5-pro
# OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# Optional: Git credentials (for code tasks)
# =============================================================================
# GITHUB_TOKEN=your_github_pat
# GIT_AUTHOR_NAME=Jinn Agent
# GIT_AUTHOR_EMAIL=agent@example.com

# =============================================================================
# Optional: IPFS Configuration
# =============================================================================
# IPFS_GATEWAY_URL=https://gateway.autonolas.tech/ipfs/
# IPFS_FETCH_TIMEOUT_MS=7000

# =============================================================================
# Optional: Supabase (for database operations)
# =============================================================================
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
